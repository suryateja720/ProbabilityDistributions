<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.packages.probabilitydistributions">

    <!--user permissions-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--application attributes-->
    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_baseline_equalizer_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_equalizer_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">

        <!--activities-->

        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BinomialDistribution"
            android:hardwareAccelerated="false"
            android:theme="@style/DistributionTheme" />

        <activity
            android:name=".BernoulliDistribution"
            android:hardwareAccelerated="false"
            android:theme="@style/DistributionTheme" />

        <activity
            android:name=".PoissonDistribution"
            android:hardwareAccelerated="false"
            android:theme="@style/DistributionTheme" />

        <activity
            android:name=".UniformDistribution"
            android:hardwareAccelerated="false"
            android:theme="@style/DistributionTheme" />

        <activity
            android:name=".ManualActivity"
            android:hardwareAccelerated="false"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth" />

        <!--meta-data-->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6700163595809054~6933298491" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>